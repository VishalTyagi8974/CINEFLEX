<%if (success && success.length){ %>
    <div class="alert alert-warning rounded-pill alert-dismissible fade show m-2 " role="alert">
        <strong>
            <%=success %>
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if(info && info.length){ %>
            <div class="alert alert-info rounded-pill alert-dismissible fade show m-2  " role="alert">
                <strong>
                    <%=info %>
                </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if(error && error.length){ %>
                    <div class="alert alert-danger rounded-pill alert-dismissible fade show m-2" role="alert">
                        <strong>
                            <%=error %>
                        </strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>