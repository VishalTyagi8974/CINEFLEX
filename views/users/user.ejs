<% layout("layouts/boilerplate") %>
    <section class="mt-3" style="text-align: center; color:white;">
        <h1><svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor"
                class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                <path fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
            </svg></h1>
        <h2 class="mb-3">
            <%=user.username %>
        </h2>

        <h2>
            <%=user.email%>
        </h2>
        <% if (user.isProductionHouse){ %>
            <a class="btn btn-danger rounded-pill" href="/movies/new">Upload Movies</a>
            <% } else{%>
                <form action="/users/<%=user._id %>" method="post">
                    <span>Registered as a Production House </span><button class=" ms-2 btn btn-success rounded-pill"
                        type="submit">Register</button>
                </form>
                <%} %>
                    <form action="/logout">
                        <button class="btn mt-2 rounded-pill" id="logout"
                            style="color:white ;background-color: #415a77;" type="submit">Logout</button>
                    </form>
    </section>
